{
  "Selectors": {
    "SelectSmallMaleGroup": {
      "From": [ "AllNPCs" ],
      "Groups": {
        "SmallMaleGroup": {
          "Filter": "IsMale",
          "How": "RndMulti",
          "Params": {
            "Min": 1,
            "Max": 3
          }
        }
      }
    },
    "SelectSmallFemaleGroup": {
      "From": [ "AllNPCs" ],
      "Groups": {
        "SmallFemaleGroup": {
          "Filter": "IsFemale",
          "How": "RndMulti",
          "Params": {
            "Min": 1,
            "Max": 3
          }
        }
      }
    },
    "ChatGroup": {
      "From": [ "SelectSmallMaleGroup", "SelectSmallFemaleGroup" ],
      "Groups": {
        "Speaker": {
          "From": [ "SmallMaleGroup" ],
          "How": "RndOne"
        },
        "ChatTarget": {
          "From": [ "SmallFemaleGroup" ],
          "How": "RndOne"
        },
        "Audience": {
          "NotFrom": ["Speaker","ChatTarget"]
        }
      }
    }
  },
  "Filters": {
    "IsMale": {
      "Function": "HasValue",
      "Params": {
        "Property": "Gender",
        "Value": "male"
      }
    },
    "IsFemale": {
      "Function": "HasValue",
      "Params": {
        "Property": "Gender",
        "Value": "female"
      }
    }
  },
  "CompoundFilters": {
    "Trans": {
      "Condition": "AllMustBeTrue",
      "Filters": [ "IsMale", "IsFemale" ]
    }
  },
  "Actions": {
    "DoChat": {
      "SetsStage": "DoChat",
      "Requires": "ChatGroup",
      "Description": "A chat event"
    }
  },
  "Outcomes": {
    "Flirt": {
      "ParentStages": [ "DoChat" ],
      "SetsStage": "NONE",
      "Selection": "ChatGroup",
      "Steps": [
        {
          "Function": "AddTag",
          "Parameters": {
            "Target": "ChatTarget",
            "Property": "Tags",
            "Value": "Complimented",
            "Description": "The target was chatted up."
          }
        },
        {
          "Function": "AddOccurence",
          "Parameters": {
            "Roles": {
              "Speaker": {
                "Details": {
                  "Description": "<Speaker.Name> chatted to <ChatTarget.Name>",
                  "Action": {
                    "Actions": [ "Spoke" ],
                    "Targets": [ "ChatTarget" ]
                  }
                }
              },
              "ChatTarget": {
                "Details": {
                  "Description": "Was chatted to by a guy",
                  "Action": {
                    "Actors": [ "ChatTarget" ],
                    "Actions": [ "Listened" ],
                    "Targets": [ "Speaker" ]
                  }
                }
              },
              "Audience": {
                "Details": {
                  "Description": "Saw a conversation",
                  "Action": {
                    "Actions": [ "Witnessed", "Conversation" ]
                  }
                }
              }
            },
            "Description": "A flirt occured with witnesses"
          }
        }
      ]
    }
  }
}
